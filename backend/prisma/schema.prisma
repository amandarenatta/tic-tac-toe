// /backend/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Este Ã© o modelo da sua tabela de resultados
model GameResult {
  id        Int      @id @default(autoincrement())
  winner    String   // "X", "O" ou "Draw" (Empate)
  createdAt DateTime @default(now())
  name      String?
}